@page
@model LogoutModel
@{
    ViewData["Title"] = "";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-light">Bấm Vào Đây Để Đăng Xuất</button>
            </form>
        }
        else
        {
            <p>Bạn đã đăng xuất thành công khỏi ứng dụng !</p>
        }
    }
</header>
